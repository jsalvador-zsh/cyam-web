---
// src/components/Awards.astro
import { Image } from "astro:assets";
import certificado from "../assets/images/certificado.png";
import homologacion from "../assets/images/homologacion.png";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Certificaciones y Acreditaciones",
  description = "Nuestros servicios están respaldados por el reconocimiento de instituciones acreditadoras y certificadoras de referencia en el sector.",
} = Astro.props;
---

