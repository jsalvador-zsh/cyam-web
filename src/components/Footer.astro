---
// src/components/Footer.astro
import { Image } from "astro:assets";
import logo from "../assets/images/logo.png";
import facebookIcon from "../assets/icons/facebook.svg";
import instagramIcon from "../assets/icons/instagram.svg";
import linkedinIcon from "../assets/icons/linkedin.svg";
import phoneIcon from "../assets/icons/phone.svg";
import emailIcon from "../assets/icons/email.svg";
import mapIcon from "../assets/icons/map-pin.svg";

const navItems = [
  {
    text: "Sobre nosotros",
    href: "/#aboutus",
  },
  {
    text: "Servicios",
    href: "/#services",
  },
  {
    text: "Bolsa de trabajo",
    href: "/jobs",
  },
  {
    text: "Quejas",
    href: "#complaints",
  },
];

const contactInfo = [
  {
    icon: mapIcon,
    text: "Urb. Manuel Prado, Calle César Vallejo Nro. 102 - Paucarpata, Arequipa",
    link: "https://maps.app.goo.gl/rJDxiek6Q8GyNjmo7",
  },
  {
    icon: phoneIcon,
    text: "+51 958-793-339 / +51 958-793-335",
    link: "tel:+51958793339",
  },
  {
    icon: emailIcon,
    text: "comercial@cyam.com",
    link: "mailto:comercial@cyam.com",
  },
];

const socialLinks = [
  {
    icon: facebookIcon,
    name: "Facebook",
    url: "https://www.facebook.com/profile.php?id=100066765183571",
  },
  {
    icon: instagramIcon,
    name: "Instagram",
    url: "#",
  },
  {
    icon: linkedinIcon,
    name: "LinkedIn",
    url: "#",
  },
];
---

<footer class="bg-accent text-background pt-16 pb-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Logo y descripción -->
      <div class="lg:col-span-1">
        <a href="/" class="inline-block mb-6">
          <Image
            src={logo}
            alt="CYAM S.R.L."
            class="h-10 w-auto"
            width={160}
            height={40}
          />
        </a>
        <p class="mb-6">
          Expertos en calibración y mantenimiento de equipos, con competencia técnica y trazabilidad al Sistema Internacional de Unidades.
        </p>

        <!-- Redes sociales -->
        <div class="flex space-x-4">
          {
            socialLinks.map((social) => (
              <a
                href={social.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-background transition-colors duration-300"
                aria-label={social.name}
              >
                <Image
                  src={social.icon}
                  alt={social.name}
                  class="h-6 w-6 text-background"
                  width={24}
                  height={24}
                />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Navegación -->
      <div>
        <h3 class="text-background text-lg font-semibold mb-6">Navegación</h3>
        <ul class="space-y-3">
          {
            navItems.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="hover:text-background transition-colors duration-300"
                >
                  {item.text}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Servicios destacados -->
      <div>
        <h3 class="text-background text-lg font-semibold mb-6">Servicios</h3>
        <ul class="space-y-3">
          <li>
            <a href="/#services">Calibración de Masa</a>
          </li>
          <li>
            <a href="/#services">Calibración de Volumen</a>
          </li>
          <li>
            <a href="/#services">Calibración de Temperatura</a>
          </li>
          <li>
            <a href="/#services">Mantenimiento</a>
          </li>
        </ul>
      </div>

      <!-- Información de contacto -->
      <div>
        <h3 class="text-background text-lg font-semibold mb-6">Contacto</h3>
        <ul class="space-y-4">
          {
            contactInfo.map((contact) => (
              <li class="flex items-start">
                <Image
                  src={contact.icon}
                  alt=""
                  class="h-5 w-5 mt-1 mr-3 flex-shrink-0"
                  width={20}
                  height={20}
                />
                {contact.link ? (
                  <a
                    href={contact.link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="hover:text-background transition-colors duration-300"
                  >
                    {contact.text}
                  </a>
                ) : (
                  <span>{contact.text}</span>
                )}
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <!-- Derechos de autor -->
    <div class="border-t border-border mt-12 pt-8 text-center md:text-left">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-sm text-background">
          © {new Date().getFullYear()} CYAM S.R.L. Todos los derechos reservados.
        </p>
      </div>
    </div>
  </div>
</footer>
