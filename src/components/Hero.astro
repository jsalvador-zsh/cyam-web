---
// src/components/Hero.astro
import { Image } from "astro:assets";
import balanza from "../assets/images/equipos/balanza.png";
import balanza2 from "../assets/images/equipos/balanza-2.png";
import vernier from "../assets/images/equipos/vernier.png";
import termometro from "../assets/images/equipos/termometro.png";

const { class: className, ...rest } = Astro.props;
---

<div class={`relative pt-16 overflow-hidden ${className}`} {...rest}>
  <!-- Elementos decorativos superiores -->
<div class="hidden md:block absolute top-0 left-0 mt-28 w-32 lg:w-64 xl:w-auto" data-aos="fade-right" data-aos-duration="1500">
  <Image
    src={vernier}
    alt="Balanza de precisión"
    class="w-full h-auto rounded-r-2xl"
    width={256}
    height={256}
  />
</div>

<div class="hidden md:block absolute top-0 right-0 mt-20 w-32 lg:w-64 xl:w-auto" data-aos="fade-left" data-aos-duration="1500">
  <Image
    src={termometro}
    alt="Instrumentos de medición"
    class="w-full h-auto rounded-l-2xl"
    width={256}
    height={256}
  />
</div>

  <div class="container mx-auto px-4 relative">
    <!-- Contenido principal -->
    <div class="max-w-2xl xl:max-w-3xl mx-auto mb-12 lg:mb-0 text-center">
      <!-- Certificaciones -->
      <div class="flex mb-6 items-center justify-center">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-checkbox"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M9 11l3 3l8 -8"></path><path
            d="M20 12v6a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h9"
          ></path></svg
        ><span class="ml-2 text-sm font-medium"
          >Acreditados y homologados</span
        >
      </div>
      <!-- Título -->
      <h1
        class="text-4xl md:text-5xl lg:text-8xl tracking-tight mb-8 font-bold"
      >
        Precisión y calidad en <span class="text-accent">calibración</span>
      </h1>

      <!-- Descripción -->
      <p class="text-lg md:text-xl mb-10 max-w-3xl mx-auto">
        Somos especialistas en calibración certificada de equipos de medición
        con estándares internacionales. Garantizamos la exactitud de sus
        instrumentos para procesos industriales confiables.
      </p>

      <!-- Botones -->
      <div
        class="flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-6"
      >
        <a
          class="inline-flex py-3 px-8 items-center justify-center text-lg font-medium text-background hover:text-background border border-accent hover:border-accent/90 bg-accent hover:bg-accent/90 rounded-full transition-all duration-300 shadow-lg hover:shadow-xl"
          href="#services"
        >
          Nuestros Servicios
        </a>
        <a
          class="inline-flex py-3 px-8 items-center justify-center text-lg font-medium text-accent hover:text-background border border-accent hover:bg-accent rounded-full transition-all duration-300"
          href="#contactus"
        >
          Solicitar Calibración
        </a>
      </div>
    </div>

    <!-- Elementos decorativos inferiores -->
    <div class="flex -mx-4 items-end relative mt-16" data-aos="fade-up" data-aos-duration="1500">
      <div class="w-1/3 xs:w-1/2 lg:w-auto px-4 opacity-80">
        <Image
          src={balanza}
          alt="Equipos de medición"
          class="block h-32 lg:h-48 w-auto rounded-t-2xl"
          width={200}
          height={200}
        />
      </div>
      <div class="w-2/3 xs:w-1/2 lg:w-auto ml-auto px-4 opacity-80" data-aos="fade-up" data-aos-duration="1500">
        <Image
          src={balanza2}
          alt="Instrumentos calibrados"
          class="block w-1/2 md:w-64 lg:w-auto ml-auto h-32 lg:h-48 rounded-t-2xl"
          width={300}
          height={200}
        />
      </div>
      <div
        class="absolute bottom-0 left-0 w-full py-32 bg-gradient-to-t from-gray-50 to-transparent"
      >
      </div>
    </div>
  </div>
</div>
