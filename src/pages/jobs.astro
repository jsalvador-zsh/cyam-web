---
import { Image } from "astro:assets";
import backgroundImage from "../assets/images/work-with-us.svg";
import Layout from "../layouts/Layout.astro";

interface Props {
    title?: string;
    description?: string;
    contactEmail?: string;
    emailSubject?: string;
}

const {
    title = "Únete a Nuestro Equipo",
    description = "En CYAM S.R.L. estamos siempre buscando talentos apasionados por la metrología y calibración.",
} = Astro.props;
---

<Layout
    title="Trabaja con nosotros"
    description="Únete a nuestro equipo de expertos en calibración y metrología."
>
    <div class="relative py-16">
        <div class="container mx-auto px-4 relative">
            <div class="max-w-6xl mx-auto">
                <!-- Encabezado -->
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <h2 class="font-heading text-3xl md:text-6xl mb-4">
                        {title}
                    </h2>
                    <p class="text-base md:text-lg">{description}</p>
                </div>
                <!-- Formulario -->
                <form
                    class=""
                    id="jobApplicationForm"
                    onsubmit="return processForm(event)"
                >
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 items-center my-16">
                        <div class="space-y-8">
                            <!-- Nombre -->
                            <div>
                                <label
                                    for="name"
                                    class="block text-sm font-medium mb-1"
                                    >Nombre Completo *</label
                                >
                                <input
                                    type="text"
                                    id="name"
                                    name="name"
                                    required
                                    class="w-full px-4 py-3 border border-border rounded-2xl focus:ring-2 focus:ring-accent focus:border-accent transition-all duration-300"
                                />
                            </div>

                            <!-- Email -->
                            <div>
                                <label
                                    for="email"
                                    class="block text-sm font-medium mb-1"
                                    >Email *</label
                                >
                                <input
                                    type="email"
                                    id="email"
                                    name="email"
                                    required
                                    class="w-full px-4 py-3 border border-border rounded-2xl focus:ring-2 focus:ring-accent focus:border-accent transition-all duration-300"
                                />
                            </div>

                            <!-- Teléfono -->
                            <div>
                                <label
                                    for="phone"
                                    class="block text-sm font-medium mb-1"
                                    >Teléfono *</label
                                >
                                <input
                                    type="tel"
                                    id="phone"
                                    name="phone"
                                    required
                                    class="w-full px-4 py-3 border border-border rounded-2xl focus:ring-2 focus:ring-accent focus:border-accent transition-all duration-300"
                                />
                            </div>

                            <!-- CV -->
                            <div class="md:col-span-2">
                                <label
                                    for="cv"
                                    class="block text-sm font-medium mb-1"
                                    >Adjuntar CV (PDF) *</label
                                >
                                <div class="mt-1 flex items-center">
                                    <input
                                        type="file"
                                        id="cv"
                                        name="cv"
                                        accept=".pdf,.doc,.docx"
                                        required
                                        class="sr-only"
                                    />
                                    <label
                                        for="cv"
                                        class="flex-1 px-4 py-3 border border-border rounded-2xl cursor-pointer hover:bg-muted transition-colors duration-200"
                                    >
                                        <span id="fileName" class=""
                                            >Seleccionar archivo...</span
                                        >
                                    </label>
                                    <button
                                        type="button"
                                        onclick="document.getElementById('cv').click()"
                                        class="ml-3 inline-flex items-center px-4 py-3 border border-transparent text-sm font-medium rounded-full hover:cursor-pointer text-background bg-accent hover:bg-accent/80 transition-colors duration-300"
                                    >
                                        <svg
                                            class="-ml-1 mr-2 h-5 w-5"
                                            fill="currentColor"
                                            viewBox="0 0 20 20"
                                            xmlns="http://www.w3.org/2000/svg"
                                        >
                                            <path
                                                fill-rule="evenodd"
                                                d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z"
                                                clip-rule="evenodd"></path>
                                        </svg>
                                        Examinar
                                    </button>
                                </div>
                                <p class="mt-1 text-sm">
                                    Formatos aceptados: PDF, DOC, DOCX (Máx.
                                    5MB)
                                </p>
                            </div>
                        </div>
                        <Image
                            src={backgroundImage}
                            alt="Trabaja con nosotros"
                            class="w-full h-full object-cover"
                            width={600}
                            height={800}
                            loading="lazy"
                            data-aos="fade-left"
                            data-aos-duration="1500"
                        />
                    </div>
                    <!-- Botón de envío -->
                    <div class="text-center">
                        <button
                            type="submit"
                            class="inline-flex py-3 px-8 items-center justify-center text-lg font-medium text-accent hover:text-background border border-accent hover:bg-accent rounded-full transition-all duration-300 hover:cursor-pointer"
                        >
                            Enviar Solicitud
                            <svg
                                class="ml-2 -mr-1 w-5 h-5"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</Layout>
<!-- Script para manejar el formulario -->
<script is:inline>
    // Mostrar nombre de archivo seleccionado
    document.getElementById("cv").addEventListener("change", function (e) {
        const fileName = e.target.files[0]
            ? e.target.files[0].name
            : "Seleccionar archivo...";
        document.getElementById("fileName").textContent = fileName;
    });

    // Procesar formulario (mailto con datos)
    function processForm(event) {
        event.preventDefault();

        const form = event.target;
        const name = form.name.value;
        const email = form.email.value;
        const phone = form.phone.value;
        const cvFile = form.cv.files[0];
        const contactEmail = "jsalvador@unsa.edu.pe";
        const emailSubject = "Postulación a Bolsa de Trabajo CYAM";

        // Validar archivo
        if (cvFile && cvFile.size > 5 * 1024 * 1024) {
            alert("El archivo es demasiado grande (máximo 5MB)");
            return false;
        }

        // Crear cuerpo del email
        const body = `Nombre: ${name}%0AEmail: ${email}%0ATeléfono: ${phone}%0A%0AMensaje: Adjunto mi CV para consideración en la bolsa de trabajo.`;

        // Crear enlace mailto
        let mailtoLink = `mailto:${contactEmail}?subject=${encodeURIComponent(emailSubject)}&body=${body}`;

        // Abrir cliente de email
        window.location.href = mailtoLink;

        // Opcional: Resetear formulario
        setTimeout(() => {
            form.reset();
            document.getElementById("fileName").textContent =
                "Seleccionar archivo...";
        }, 1000);

        return false;
    }
</script>
